
@{
    ViewBag.Title = "TestSetupList";
}

<script>
    $(document).ready(function () {


        debugger;
        $('#table').DataTable({
            "ajax": 'https://localhost:44378/TestSetup/ReadDT',
            "dataSrc": '',
            "columns": [

                { "data": "Id", className: "text-center" },
                { "data": "TestName", className: "text-center" },
                { "data": "ShortDesp", className: "text-center" },
                { "data": "Type", className: "text-center" },
                { "data": "Section", className: "text-center" },
                { "data": "SubSection", className: "text-center" },
                { "data": "CptCode", className: "text-center" },
                { "data": "IsActive", className: "text-center" },
                { "data": "IsDeleted", className: "text-center" },
                { "data": "Action", className: "text-center" }

            ],
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o hoverback" style="color:blue;"></i>',
                    titleAttr: 'Copy'
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o hoverback" style="color:green;"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o hoverback" style="color:purple;"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o hoverback" style="color:red;"></i>',
                    titleAttr: 'PDF'
                }
            ]
        });

    });

    function Update() {

        debugger;
        var Id = $("#TxtId").val();
        var TestName = $("#TxtTestName").val();
        var ShortDesp = $("#TxtShortDesp").val();
        var Type = $("#TxtType").val();
        var Section = $("#TxtSection").val();
        var SubSection = $("#TxtSubSection").val();
        var CptCode = $("#TxtCptCode").val();
        var IsActive = $("#TxtIsActive").val();
        var IsDeleted = $("#TxtIsDeleted").val();

        //with edit
        if (Id != '') {

            debugger;
            $.ajax({
                url: 'https://localhost:44378/TestSetup/TestSetupUpdate',
                type: 'POST',
                data: {
                    Id: Id,
                    TestName: TestName,
                    ShortDesp: ShortDesp,
                    Type: Type,
                    Section: Section,
                    SubSection: SubSection,
                    CptCode: CptCode,
                    IsActive: IsActive
                },
                success: function (data) {

                    Swal.fire(
                        'Updated!',
                        'Your record has been updated!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

        //new entry
        else {
            debugger;
            $.ajax({
                url: 'https://localhost:44378/CustomSetup/CustomSetupUpdate',
                type: 'POST',
                data: {
                    TestName: TestName,
                    ShortDesp: ShortDesp,
                    Type: Type,
                    Section: Section,
                    SubSection: SubSection,
                    CptCode: CptCode,
                    IsActive: IsActive
                },
                success: function (data) {
                    Swal.fire(
                        'Registered!',
                        'Your record has been registered!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

    }
</script>

