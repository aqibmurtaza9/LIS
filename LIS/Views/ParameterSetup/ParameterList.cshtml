
@{
    ViewBag.Title = "ParameterList";
}

<script>
    $(document).ready(function () {

        debugger;
        $('#table').DataTable({
            responsive: true,
            "ajax": 'https://localhost:44378/ParameterSetup/ParameterSetupRead',
            "dataSrc": '',
            "columns": [

                { "data": "Id", className: "text-center" },
                { "data": "TestCode", className: "text-center" },
                { "data": "ParameterName", className: "text-center" },
                { "data": "ParameterType", className: "text-center" },
                { "data": "Unit", className: "text-center" },
                { "data": "Range", className: "text-center" },
                { "data": "IsActive", className: "text-center" },
                { "data": "Action", className: "text-center" }
            ],

            dom: 'Bflrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o hoverback" style="color:blue;font-size: 20px;"></i>',
                    titleAttr: 'Copy'
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o hoverback" style="color:green;font-size: 20px;"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o hoverback" style="color:purple;font-size: 20px;"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o hoverback" style="color:red;font-size: 20px;"></i>',
                    titleAttr: 'PDF'
                }
            ]


        });

    });

    function Update() {
        console.log("update");
        var paramSetupId = $('#paramSetupId').val();

        var testCode = $("#testCode").val(); //get selected custom setup parent value
        var parameterName = $('#parameterName').val();
        var parameterType = $('#parameterType').find('option:selected').text();
        var unit = $('#unit').val();
        var range = $('#range').val();
        var isActive = $('#isActive').is(':checked');

        //with edit
        if (paramSetupId == '') {
            debugger;
            $.ajax({
                url: 'https://localhost:44378/ParameterSetup/ParameterSetupUpdate',
                type: 'POST',
                data: {
                    Id: paramSetupId,
                    TestCode: testCode,
                    ParameterName: parameterName,
                    ParameterType: parameterType,
                    Unit: unit,
                    Range: range,
                    IsActive: isActive

                },
                success: function (data) {

                    Swal.fire(
                        'Registered!',
                        'Your record has been registered!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

        //new entry
        else {
            debugger;
            $.ajax({
                url: 'https://localhost:44378/ParameterSetup/ParameterSetupUpdate',
                type: 'POST',
                data: {
                    Id: paramSetupId,
                    TestCode: testCode,
                    ParameterName: parameterName,
                    ParameterType: parameterType,
                    Unit: unit,
                    Range: range,
                    IsActive: isActive

                },
                success: function (data) {
                    Swal.fire(
                        'Updated!',
                        'Your record has been updated!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

    }

    function Edit(a) {
        debugger;
        localStorage["paramSetupId"] = a;
        $('#addNew').click();
    }

    async function EditCustomSetup() {

        var Id = localStorage["paramSetupId"];
        if (Id != null) {
            debugger;
            await $.ajax({
                url: 'https://localhost:44378/ParameterSetup/ParameterSetupReadById',
                type: 'POST',
                data: { Id: Id },
                success: function (data) {
                    debugger;
                    var a = JSON.parse(data);
                    $('#paramSetupId').val(a[0].Id);
                    $('#testCode').find('option:selected').text(a[0].TestCode);
                    $('#parameterName').val(a[0].ParameterName);
                    $('#parameterType').find('option:selected').text(a[0].ParameterType);
                    $('#unit').val(a[0].Unit);
                    $('#range').val(a[0].Range);
                    $('#isActive').prop("checked", a[0].IsActive);
                    if (a[0].IsActive == true) {
                        console.log(a[0].IsActive)
                        $('#isActive').prop('checked', true)
                    }
                }

            });

        }
        localStorage.removeItem("paramSetupId");
    }


    function Delete(a) {
        debugger;
        localStorage["paramSetupId"] = a;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
        }).then(function (result) {
            if (result.isConfirmed) {

                var GetId = localStorage["paramSetupId"];
                $.ajax({
                    url: 'https://localhost:44378/ParameterSetup/DeleteParameter',
                    type: 'POST',
                    data: { Id: GetId },
                    success: function (data) {
                        debugger;

                        localStorage.removeItem("paramSetupId");
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        ).then(function (get) {
                            if (get.isConfirmed) {
                                location.reload();
                            }
                        });
                    },
                    error: function () {
                        swalWithBootstrapButtons.fire(
                            'Cancelled',
                            ':)',
                            'error'
                        )
                    }

                });
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                swalWithBootstrapButtons.fire(
                    'Cancelled',
                    ':)',
                    'error'
                )
            }
        })

    }

    function confirmDelete() {
        var GetId = localStorage["paramSetupId"];

        $.ajax({
            url: 'https://localhost:44378/CustomSetup/DeleteCustomSetupById',
            type: 'POST',
            data: { Id: GetId },
            success: function (data) {
                debugger;

                localStorage.removeItem("paramSetupId");

            }

        });

        location.reload();

        localStorage.removeItem("paramSetupId");
    }

</script>
