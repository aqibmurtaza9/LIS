
@{
    ViewBag.Title = "LabRequestList";
}

<script>
    $(document).ready(function () {
        debugger;
        $('#table').DataTable({
            responsive: true,
            "ajax": 'https://localhost:44378/LabRequest/LabRequestRead',
            "dataSrc": '',
            "columns": [

                { "data": "Id", className: "text-center" },
                { "data": "TestCode", className: "text-center" },
                { "data": "ParameterName", className: "text-center" },
                { "data": "ParameterType", className: "text-center" },
                { "data": "Unit", className: "text-center" },
                { "data": "Range", className: "text-center" },
                { "data": "IsActive", className: "text-center" },
                { "data": "Action", className: "text-center" }
            ],

            dom: 'Bflrtip',
            buttons: [
                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o hoverback" style="color:blue;font-size: 20px;"></i>',
                    titleAttr: 'Copy'
                },
                {
                    extend: 'excelHtml5',
                    text: '<i class="fa fa-file-excel-o hoverback" style="color:green;font-size: 20px;"></i>',
                    titleAttr: 'Excel'
                },
                {
                    extend: 'csvHtml5',
                    text: '<i class="fa fa-file-text-o hoverback" style="color:purple;font-size: 20px;"></i>',
                    titleAttr: 'CSV'
                },
                {
                    extend: 'pdfHtml5',
                    text: '<i class="fa fa-file-pdf-o hoverback" style="color:red;font-size: 20px;"></i>',
                    titleAttr: 'PDF'
                }
            ]


        });

    });
</script>



<div class="row">
<div class="row">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="form-group row mb-2">
                <div class="col-lg-3">
                    <button id="addNew" type="button" onclick="EditCustomSetup()" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-animation="bounce" data-bs-target=".bs-example-modal-lg">+ Add New</button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display" style="width:100%" id="table">
                        <thead class="thead-light">
                            <tr>
                                <td>Test Code</td>
                                <td>IRS Type</td>
                                <td>Urgent Type</td>
                                <td>Status</td>
                                <td>Special Instruction</td>
                                <td>Collection Date Time</td>
                                <td>Reporting Date time</td>
                                <td>Action</td>
                            </tr><!--end tr-->
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div> <!--end col-->
</div><!--end row-->
</div><!--end row-->

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title mt-0" id="myLargeModalLabel">Add New Parameter</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">ID</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" disabled id="paramSetupId">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">Test Code</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" id="testCode">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">Paramter Name</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" id="parameterName">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">Parameter Type</label>
                    <div class="col-sm-6">
                        <select class="form-select" aria-label="Default select example" id="parameterType">
                            <option selected disabled hidden>Parameter Type...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">Unit</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" id="unit">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="example-text-input" class="col-sm-2 col-form-label text-end">Range</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" id="range">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-4 mb-4 col-form-label text-end">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label" for="inlineCheckbox2">IsActive</label>
                            <input class="form-check-input " type="checkbox" id="isActive">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-de-primary btn-sm text-light px-4 mt-3 mb-0" onclick="Update()">Save</button>
                    <button class="btn btn-de-danger btn-sm text-light px-4 mt-3 mb-0" data-bs-dismiss="modal">Cancel</button>
                </div>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

