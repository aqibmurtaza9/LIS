<script>
    $(document).ready(function () {

        debugger;
        $('#table').DataTable({
            "ajax": 'https://localhost:44378/LaboratorySetup/LaboratorySetupRead',
            "dataSrc": '',
            "columns": [
                { "data": "Id", className: "text-center" },
                { "data": "Name", className: "text-center" },
                { "data": "Description", className: "text-center" },
                { "data": "IsActive", className: "text-center" },
                { "data": "Action", className: "text-center" }
            ],
            dom: 'Bflrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });

    function Edit(a) {
        debugger;
        localStorage["labSetupId"] = a;
        $('#addNew').click();
    }

    async function EditLaboratorySetup() {
        var GUID = localStorage["labSetupId"];
        if (GUID != null) {

            // $('#updatebtn').prop('disabled', false);
            debugger;
            $.ajax({
                url: 'https://localhost:44378/LaboratorySetup/LaboratoryRead',
                type: 'POST',
                data: { Id: GUID },
                success: function (data) {
                    debugger;
                    var a = JSON.parse(data);
                    $('#labSetupId').val(a[0].Id);
                    $('#name').val(a[0].Name);
                    $('#description').val(a[0].Description);
                    if (a[0].IsActive == true) {
                        console.log(a[0].IsActive)
                        $('#isActive').prop('checked', true)
                    }
                }

            });
        }
        localStorage.removeItem("labSetupId");
    }

    function Delete(a) {
        debugger;
        localStorage["labSetupId"] = a;

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
        }).then(function (result) {
            if (result.isConfirmed) {

                var GetId = localStorage["labSetupId"];
                $.ajax({
                    url: 'https://localhost:44378/LaboratorySetup/DeleteLabSetup',
                    type: 'POST',
                    data: { Id: GetId },
                    success: function (data) {
                        debugger;

                        localStorage.removeItem("labSetupId");
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        ).then(function (get) {
                            if (get.isConfirmed) {
                                location.reload();
                            }
                        });
                    },
                    error: function () {
                        swalWithBootstrapButtons.fire(
                            'Cancelled',
                            ':)',
                            'error'
                        )
                    }

                });
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                swalWithBootstrapButtons.fire(
                    'Cancelled',
                    ':)',
                    'error'
                )
            }
        })

    }

    function confirmDelete() {
        var GetId = localStorage["labSetupId"];

        $.ajax({
            url: 'https://localhost:44378/CustomSetup/DeleteLabSetup',
            type: 'POST',
            data: { Id: GetId },
            success: function (data) {
                debugger;
                localStorage.removeItem("labSetupId");
            }

        });

        location.reload();
        localStorage.removeItem("labSetupId");
    }

    function Update() {

        var labSetupId = $('#labSetupId').val();
        var name = $("#name").val(); //get selected custom setup parent value
        var description = $('#description').val();
        var isActive = $('#isActive').is(':checked');

        //with edit
        if (labSetupId != '') {
            debugger;
            $.ajax({
                url: 'https://localhost:44378/LaboratorySetup/LaboratorySetupUpdate',
                type: 'POST',
                data: {
                    Id: labSetupId,
                    Name: name,
                    Description: description,
                    IsActive: isActive
                },
                success: function (data) {

                    Swal.fire(
                        'Registered!',
                        'Your record has been registered!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

        //new entry
        else {
            debugger;
            $.ajax({
                url: 'https://localhost:44378/LaboratorySetup/LaboratorySetupUpdate',
                type: 'POST',
                data: {
                    Name: name,
                    Description: description,
                    IsActive: isActive

                },
                success: function (data) {
                    Swal.fire(
                        'Updated!',
                        'Your record has been updated!',
                        'success'
                    ).then(function (get) {
                        if (get.isConfirmed) {
                            location.reload();
                        }
                    });
                },
                error: function () {
                    swalWithBootstrapButtons.fire(
                        'Cancelled',
                        ':)',
                        'error'
                    )
                }

            });
        }

    }

</script>
